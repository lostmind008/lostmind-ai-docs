      "Bash(mypy:*)",
      "Bash(tsc:*)",
      "Bash(webpack:*)",
      "Bash(vite:*)",
      "Bash(turbo:*)",
      "Bash(nx:*)",
      "Read",
      "Edit",
      "Write",
      "Glob",
